<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>FunkoShop</title>
    <link rel="stylesheet" href="/css/index.css" />
    <link rel="stylesheet" href="/css/createProduct.css" />
    <link rel="stylesheet" href="/css/responsive.css" />
    <link
      rel="shortcut icon"
      href="/img/branding/isotype.svg"
      type="image/x-icon"
    />
  </head>
  <body>
    <%- include('../../partials/headerAdmin') %>
    <main class="main_edit container">
      <h1 class="title">CREAR NUEVO ITEM</h1>
      <form
        method="post"
        action="/admin/products/create"
        enctype="multipart/form-data"
      >
        <div class="renglon1">
          <div class="select_categoria">
            <label for="categoria">Categoria:</label>
            <select name="categoria" id="categoria">
              <option value="" disabled selected hidden>Seleccionar</option>
              <% categorias.forEach((categoria)=>{ %>
              <option value="<%= categoria.id %>">
                <%= categoria.nombre %>
              </option>
              <% }) %>
            </select>
          </div>

          <div class="select_licencia">
            <label for="licencia">Licencia:</label>
            <select name="licencia" id="licencia">
              <option value="" disabled selected hidden>Seleccionar</option>
              <% licencias.forEach((licencia)=>{ %>
              <option value="<%= licencia.id %>"><%= licencia.nombre %></option>
              <% }) %>
            </select>
          </div>
        </div>

        <div class="container_nombre">
          <label for="">Nombre del producto:</label>
          <input
            class="input_texto"
            placeholder="Kakashi Hatake Shippuden Saga"
            name="nombre"
          />
        </div>

        <div class="renglon">
          <textarea
            name="descripcion"
            id=""
            placeholder="DescripciÃ³n del producto"
          ></textarea>
        </div>
        <div class="renglon">
          <div class="renglon__div">
            <label for="">SKU:</label>
            <input
              type="text"
              class="input_texto input_mediano"
              name="SKU"
              id=""
              placeholder="SSK111AB001"
            />
          </div>

          <div class="renglon__div">
            <label for="">Precio:</label>
            <input
              type="number"
              class="input_texto input_mediano"
              placeholder="$ 0.000,00"
              name="precio"
            />
          </div>

          <div class="renglon__div">
            <label for="">Stock:</label>
            <input
              type="number"
              class="input_texto input_chico"
              placeholder="0"
              name="stock"
            />
          </div>
        </div>

        <div class="renglon">
          <div class="renglon__div">
            <label for="">Descuento:</label>
            <input
              type="number"
              class="input_texto input_chico"
              placeholder="0%"
              name="descuento"
            />
          </div>

          <div class="renglon__div">
            <label for="">Cuotas:</label>
          <select name="cuotas" id="">
            <option value="3" selected>3 Cuotas sin interes</option>
            <option value="6">6 Cuotas sin interes</option>
            <option value="12">12 Cuotas sin interes</option>
            <option value="18">18 Cuotas sin interes</option>
          </select>
          </div>
          
        </div>
        <div class="renglon">
          <label for="">Imagenes:</label>
          <input type="file" name="imagenes" id="" multiple />
        </div>
        <div class="renglon">
          <input
            type="submit"
            class="boton_rojo"
            value="Agregar Producto"
            class="b"
          />
          <input type="reset" class="boton_rojo" value="Limpiar" />
        </div>
      </form>
    </main>
    <%- include('../../partials/footerAdmin') %>
    <script src="/js/index.js"></script>
  </body>
</html>
